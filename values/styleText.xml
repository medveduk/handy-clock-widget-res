    <style name="styleButton_light">
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="styleButton_dark">
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="styleSmallImage">
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:baselineAlignBottom">false</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:layout_marginLeft">2sp</item>
        
        <item name="android:scaleType">centerInside</item>        
    </style>
    
    <style name="Theme.Light" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar" tools:targetApi="14">
        <item name="colorPrefBackground">#CCCCCC</item>
    </style>

    <style name="Theme.Dark" parent="@android:style/Theme.Black">
	    <item name="colorPrefBackground">#555555</item>
        
    </style>
    
