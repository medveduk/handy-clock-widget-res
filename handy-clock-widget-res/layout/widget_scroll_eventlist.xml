<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/widget_background_pad_bottom_small"
    android:paddingLeft="@dimen/widget_margin8"
    android:paddingRight="@dimen/widget_margin8"
    android:paddingTop="@dimen/widget_background_pad_top_small"
    android:weightSum="1" >
    
	<ListView
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:id="@+id/widgetListView"
	    android:dividerHeight="0dp"
	    android:fastScrollEnabled="false"
	    android:scrollingCache="true"
	    android:divider="#00000000"
	    android:smoothScrollbar="false"/>
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
		android:paddingRight="5dp"
		android:orientation="vertical" >
	    <TextView        
	        android:id="@+id/statusText"
	        style="@style/Shadow"
	        android:layout_width="wrap_content"
	        android:background="@drawable/border_gray_black"
		    android:layout_height="wrap_content"
		    android:paddingLeft="5dp"
		    android:paddingRight="5dp"
		    android:paddingBottom="2dp"
		    android:layout_marginBottom="5dp"
		    android:visibility="gone"
		    android:text="status"/> 	       
		<TextView        
	        android:id="@+id/errorText"
	        style="@style/Shadow"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:visibility="gone"
		    android:text="error"/>
    </LinearLayout>
</FrameLayout>
