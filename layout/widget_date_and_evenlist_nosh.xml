<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="4" android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingRight="5sp" >

        <TextView
            android:id="@+id/labelTime"
            style="@style/NoShadow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:visibility="gone"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/labelAMPM"
            style="@style/NoShadow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include layout="@layout/system_info_nosh"/>

        <include layout="@layout/dateweek_nosh" />
        
        <include layout="@layout/alarm_nosh" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateAndEventListDivider"
        android:layout_width="2sp"
        android:layout_height="fill_parent"
        android:background="#AAAAAA" />

    <LinearLayout
        android:id="@+id/eventListLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <include layout="@layout/alarm_rest_nsh" />
        <TextView
            style="@style/NoShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="dateAndEventListEventListLayout"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>
    
    <LinearLayout
	        android:id="@+id/layoutMonthCalendar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingLeft="5sp"
	        android:gravity="center"
	        android:visibility="gone"
	        android:orientation="vertical" >
	        <TextView
	            style="@style/NoShadow"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="calendar"
	            android:visibility="gone" />
		</LinearLayout>

</LinearLayout>