<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:id="@+id/layoutWidgetBackGroundMain" xmlns:tools="http://schemas.android.com/tools">

	<ImageView
	    android:id="@+id/widgetBackGroundImageView"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"

	    android:padding="@dimen/widget_margin3"
	    android:scaleType="fitXY"
		android:visibility="gone"
	    tools:ignore="ContentDescription" />

	<LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
		android:background="@drawable/backgroud_solid_dark"
		android:id="@+id/widgetBackGroundLinearLayout"
		android:visibility="gone"
		android:orientation="vertical" />

	<LinearLayout
	    android:id="@+id/layoutWidgetContent"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:orientation="vertical"
	    android:padding="@dimen/widget_background_pad_bottom_small"
	    android:weightSum="1" >

	</LinearLayout>
	<LinearLayout
	    android:id="@+id/widgetBackgroundBottomBar"
	    android:layout_width="fill_parent"
		android:layout_height="3sp"
		android:layout_gravity="bottom"
		android:background="@android:drawable/bottom_bar"
		android:layout_marginLeft="@dimen/widget_margin6"
		android:layout_marginBottom="@dimen/widget_margin5"
		android:layout_marginRight="@dimen/widget_margin6"
		android:visibility="gone"
		android:orientation="horizontal" />
	<TextView
        android:id="@+id/labelUpdateStared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updaing"
        android:gravity="center"
        android:visibility="gone" />	
</FrameLayout>