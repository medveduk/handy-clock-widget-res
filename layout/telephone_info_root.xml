<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutWidgetBackGroundMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/layoutTelephoneInfoContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingBottom="@dimen/widget_background_pad_bottom"
        android:paddingLeft="@dimen/widget_margin8"
        android:paddingRight="@dimen/widget_margin8"
        android:paddingTop="@dimen/widget_background_pad_bottom"
        android:weightSum="1" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widgetBackgroundBottomBar"
        android:layout_width="fill_parent"
        android:layout_height="3sp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/widget_margin5"
        android:layout_marginLeft="@dimen/widget_margin6"
        android:layout_marginRight="@dimen/widget_margin6"
        android:background="@android:drawable/bottom_bar"
        android:visibility="visible" />
    
    <TextView
        android:id="@+id/labelUpdateStared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/updaing"
        android:gravity="center"
        android:visibility="gone" />

</FrameLayout>